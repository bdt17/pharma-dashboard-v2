<!DOCTYPE html>
<html>
<head>
  <title>Driver Dashboard - Pharma Transport</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { 
      font-family: -apple-system, BlinkMacSystemFont, sans-serif; 
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh; padding: 20px;
    }
    .driver-header { 
      background: linear-gradient(135deg, #0984C0, #60BDD1); 
      color: white; 
      padding: 2rem; 
      border-radius: 16px; 
      text-align: center; 
      margin-bottom: 2rem;
      box-shadow: 0 10px 30px rgba(9,132,192,0.3);
    }
    .status-card { 
      background: white; 
      padding: 2rem; 
      border-radius: 16px; 
      margin-bottom: 1.5rem;
      box-shadow: 0 8px 32px rgba(170,167,176,0.15);
      border-left: 5px solid #0984C0;
    }
    .gps-btn { 
      background: linear-gradient(135deg, #10b981, #059669);
      color: white; 
      border: none; 
      padding: 1.2rem 2.5rem; 
      border-radius: 12px; 
      font-size: 1.2rem; 
      font-weight: bold;
      cursor: pointer;
      width: 100%;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(16,185,129,0.3);
    }
    .gps-btn:hover { 
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(16,185,129,0.4);
    }
    .gps-btn:disabled { opacity: 0.7; cursor: not-allowed; transform: none; }
    .coords { 
      font-family: 'Courier New', monospace; 
      font-size: 1.1rem; 
      color: #10b981; 
      background: #f0fdf4; 
      padding: 1.5rem; 
      border-radius: 12px;
      border-left: 4px solid #059669;
      margin: 1rem 0;
      text-align: center;
    }
    .status { 
      font-size: 1.1rem; 
      font-weight: bold; 
      padding: 1rem; 
      border-radius: 8px;
      text-align: center;
    }
    .status-success { background: #dcfce7; color: #166534; }
    .status-sending { background: #fef3c7; color: #92400e; }
    h1, h2 { color: #0984C0; margin-bottom: 1rem; }
    .load-info { 
      background: #eff6ff; 
      padding: 1.5rem; 
      border-radius: 12px; 
      border-left: 4px solid #60BDD1;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>
  <div class="driver-header">
    <h1>üöö Driver Portal</h1>
    <p><strong>Welcome back, <%= @current_driver&.name || 'Driver' %>!</strong></p>
    <p style="opacity: 0.9; font-size: 1.1rem;">üìû <%= @current_driver&.phone_number || 'N/A' %></p>
  </div>

  <div class="status-card">
    <h2>üìç GPS Check-in</h2>
    <div id="coords" class="coords">Click button below to send your GPS location</div>
    <button id="gps-btn" class="gps-btn" onclick="sendGPS()">
      üöö SEND GPS CHECK-IN
    </button>
    <div id="status" class="status status-success">Ready for dispatch</div>
  </div>

  <div class="status-card">
    <h2>üì¶ Today's Load</h2>
    <div class="load-info">
      <strong>Batch #PHARMA-<%= Time.current.strftime('%Y%m%d') %>-001</strong><br>
      Temperature: 2-8¬∞C ‚úÖ<br>
      Destination: Scottsdale Pharma Hub (15 miles)<br>
      ETA: 28 minutes
    </div>
  </div>

  <script>
    function sendGPS() {
      const btn = document.getElementById('gps-btn');
      const coordsDiv = document.getElementById('coords');
      const statusDiv = document.getElementById('status');
      
      btn.innerHTML = 'üì° SENDING...';
      btn.disabled = true;
      statusDiv.innerHTML = 'üì° Sending GPS to dispatch...';
      statusDiv.className = 'status status-sending';
      
      if (!navigator.geolocation) {
        alert('GPS not supported on this browser');
        resetButton();
        return;
      }
      
      navigator.geolocation.getCurrentPosition(
        position => {
          const lat = position.coords.latitude.toFixed(6);
          const lng = position.coords.longitude.toFixed(6);
          const accuracy = position.coords.accuracy.toFixed(0);
          
          coordsDiv.innerHTML = `
            ‚úÖ Lat: ${lat}<br>
            Lng: ${lng}<br>
            Accuracy: ${accuracy}m
          `;
          
          fetch('/drivers/checkin', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || ''
            },
            body: JSON.stringify({
              latitude: parseFloat(lat),
              longitude: parseFloat(lng),
              accuracy: parseFloat(accuracy)
            })
          })
          .then(response => response.json())
          .then(data => {
            statusDiv.innerHTML = '‚úÖ GPS SENT TO DISPATCH!';
            statusDiv.className = 'status status-success';
            btn.innerHTML = '‚úÖ SENT SUCCESSFULLY';
            setTimeout(resetButton, 3000);
          })
          .catch(error => {
            statusDiv.innerHTML = '‚ùå Send failed - try again';
            statusDiv.className = 'status';
            coordsDiv.innerHTML = 'GPS location captured but send failed';
            resetButton();
          });
        },
        error => {
          let message = 'GPS error: ';
          switch(error.code) {
            case error.PERMISSION_DENIED: message += 'Access denied'; break;
            case error.POSITION_UNAVAILABLE: message += 'Location unavailable'; break;
            case error.TIMEOUT: message += 'Timeout'; break;
          }
          statusDiv.innerHTML = message;
          resetButton();
        },
        { 
          enableHighAccuracy: true, 
          timeout: 10000, 
          maximumAge: 60000 
        }
      );
    }
    
    function resetButton() {
      const btn = document.getElementById('gps-btn');
      btn.innerHTML = 'üöö SEND GPS CHECK-IN';
      btn.disabled = false;
    }
    
    // Auto GPS every 2 minutes
    setInterval(() => {
      if (document.visibilityState === 'visible') {
        sendGPS();
      }
    }, 120000);
  </script>
</body>
</html>
