<!DOCTYPE html>
<html>
<head>
  <title>Driver Portal - Pharma Transport</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    :root {
      --primary-blue: #0984C0;
      --accent-silver: #AAA7B0;
      --mid-grey: #565759;
      --bg-white: #FFFFFF;
      --success-green: #10b981;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { 
      font-family: -apple-system, BlinkMacSystemFont, sans-serif; 
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      padding: 20px;
    }
    .driver-header { 
      background: var(--primary-blue); 
      color: white; 
      padding: 2rem; 
      border-radius: 16px; 
      text-align: center; 
      margin-bottom: 2rem;
      box-shadow: 0 10px 30px rgba(9,132,192,0.3);
    }
    .status-card { 
      background: var(--bg-white); 
      padding: 2rem; 
      border-radius: 16px; 
      margin-bottom: 1.5rem;
      box-shadow: 0 8px 32px rgba(170,167,176,0.15);
      border-left: 5px solid var(--primary-blue);
    }
    .gps-btn { 
      background: linear-gradient(135deg, var(--primary-blue), #60BDD1);
      color: white; 
      border: none; 
      padding: 1.2rem 2.5rem; 
      border-radius: 12px; 
      font-size: 1.2rem; 
      font-weight: bold;
      cursor: pointer;
      width: 100%;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(9,132,192,0.3);
    }
    .gps-btn:hover { 
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(9,132,192,0.4);
    }
    .gps-btn:active { transform: translateY(0); }
    .coords { 
      font-family: 'Courier New', monospace; 
      font-size: 1.2rem; 
      color: var(--primary-blue); 
      background: #f8f9fa; 
      padding: 1.5rem; 
      border-radius: 12px;
      border-left: 4px solid var(--success-green);
      margin: 1rem 0;
    }
    .status-success { 
      color: var(--success-green); 
      font-weight: bold; 
      font-size: 1.1rem;
    }
    h1, h2 { color: var(--primary-blue); margin-bottom: 1rem; }
    .load-info { 
      background: #f0f8ff; 
      padding: 1rem; 
      border-radius: 8px; 
      border-left: 4px solid var(--accent-silver);
    }
  </style>
  <meta name="csrf-token" content="<%= form_authenticity_token() %>">
</head>
<body>
  <div class="driver-header">
    <h1>üì± Driver Portal</h1>
    <p><strong>Welcome back, <%= current_driver.name %>!</strong></p>
    <p style="opacity: 0.9;">üìû <%= current_driver.phone_number %></p>
  </div>

  <div class="status-card">
    <h2>üìç GPS Check-in</h2>
    <div id="coords-display" class="coords">Click button to send GPS location</div>
    <button class="gps-btn" onclick="sendGPS()">
      üöö SEND GPS CHECK-IN
    </button>
    <div id="status" class="status-success">Ready for dispatch</div>
  </div>

  <div class="status-card">
    <h2>üì¶ Today's Load</h2>
    <div class="load-info">
      <strong>Batch #PHARMA-001</strong><br>
      Temperature: 2-8¬∞C ‚úÖ<br>
      Destination: Scottsdale Hub (15 miles)<br>
      ETA: 28 min
    </div>
  </div>

  <script>
    function sendGPS() {
      const btn = event.target;
      btn.innerHTML = 'üì° SENDING...';
      btn.disabled = true;
      
      if (!navigator.geolocation) {
        alert('GPS not supported');
        return;
      }
      
      navigator.geolocation.getCurrentPosition(
        position => {
          const lat = position.coords.latitude.toFixed(6);
          const lng = position.coords.longitude.toFixed(6);
          
          document.getElementById('coords-display').innerHTML = 
            `‚úÖ Lat: ${lat}<br>Lng: ${lng}<br>Accuracy: ${position.coords.accuracy.toFixed(0)}m`;
          
          fetch('/drivers/checkin', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
            },
            body: JSON.stringify({
              latitude: parseFloat(lat),
              longitude: parseFloat(lng),
              vehicle_id: 1
            })
          })
          .then(response => response.json())
          .then(data => {
            document.getElementById('status').innerHTML = '‚úÖ GPS SENT TO DISPATCH!';
            btn.innerHTML = '‚úÖ SENT!';
            setTimeout(() => {
              btn.innerHTML = 'üöö SEND GPS CHECK-IN';
              btn.disabled = false;
            }, 2000);
          })
          .catch(error => {
            document.getElementById('status').innerHTML = '‚ùå Send failed';
            btn.innerHTML = 'üöö SEND GPS CHECK-IN';
            btn.disabled = false;
          });
        },
        error => {
          document.getElementById('status').innerHTML = '‚ùå GPS access denied';
          btn.innerHTML = 'üöö SEND GPS CHECK-IN';
          btn.disabled = false;
        },
        { 
          enableHighAccuracy: true, 
          timeout: 10000, 
          maximumAge: 60000 
        }
      );
    }
    
    // Auto-checkin every 2 minutes
    setInterval(sendGPS, 120000);
  </script>
</body>
</html>
