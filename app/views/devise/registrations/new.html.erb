<div class="driver-signup">
  <h2>ðŸšš Driver Sign Up - Pharma Transport</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="field">
      <%= f.label :name, "Full Name *" %><br />
      <%= f.text_field :name, autofocus: true, required: true, placeholder: "John Driver" %>
    </div>
    
    <div class="field">
      <%= f.label :phone_number, "Phone *" %><br />
      <%= f.text_field :phone_number, required: true, placeholder: "602-555-0123" %>
    </div>
    
    <div class="field">
      <%= f.label :email, "Email *" %><br />
      <%= f.email_field :email, autocomplete: "email", required: true, placeholder: "john@pharma.com" %>
    </div>
    
    <div class="field">
      <%= f.label :password, "Password *" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
    </div>
    
    <div class="field">
      <%= f.label :password_confirmation, "Confirm Password *" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>
    
    <div class="actions">
      <%= f.submit "ðŸšš Join Fleet", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
.driver-signup { max-width: 400px; margin: 50px auto; padding: 2rem; background: white; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); }
.field { margin-bottom: 1.5rem; }
.field label { display: block; margin-bottom: 0.5rem; font-weight: bold; color: #0984C0; }
.field input { width: 100%; padding: 12px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; }
.btn-primary { background: linear-gradient(135deg, #0984C0, #60BDD1); color: white; border: none; padding: 14px 28px; border-radius: 8px; font-size: 16px; font-weight: bold; cursor: pointer; width: 100%; }
</style>
